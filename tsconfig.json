{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.js",
    "prettier.config.js",
    "vite.config.js"
  ],

  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "~utils/*": ["src/components/utils/*"],
      "~home/*": ["src/components/home/*"],
      "~api/*": ["src/api/*"],
      "~constants/*": ["src/constants/*"],
      "~context/*": ["src/context/*"],
      "~hooks/*": ["src/hooks/*"],
      "~layout/*": ["src/layout/*"],
      "~redux/*": ["src/redux/*"],
      "~routes/*": ["src/routes/*"],
      "~scripts/*": ["src/scripts/*"],
      "~views/*": ["src/views/*"],
      "@/*": ["./src/*"]
    }
  }
}
